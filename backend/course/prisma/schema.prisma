generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model classRegistered {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  clsName    String
  codeCourse String
  credits    Int
  name       String
  schedule   String
  status     String
  student_id String
  teacher    String
}

model course {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  Prerequisite String
  codeCourse   String
  codeSub      String
  credits      Int
  name         String
  pracNum      Int
  theoryNum    Int
}

model studyProgram {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  electiveCourses String[]
  requiredCourses String[]
  semester        String
  totalCredits    Int
}
