generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model accounts {
  id            Int      @id @default(autoincrement())
  student_id    String @unique
  email         String @unique
  password_hash String
  create_at     DateTime @default(now())
  update_at     DateTime @updatedAt @default(now())
}